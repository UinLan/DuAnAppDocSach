<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".objec.DocSachActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/tenSachDocSach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên Sách"/>

        <TextView
            android:id="@+id/tenChuongDocSach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên Chương"/>
        <Button
            android:id="@+id/btnGhiChu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi Chú"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout">
<TextView
    android:id="@+id/tvSachDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    />
    </ScrollView>
    <ImageView
        android:onClick="left"
        android:background="@drawable/bg_left"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:padding="6dp"
        android:tint="#fff"
        android:layout_centerVertical="true"
        android:src="@drawable/left"/>
    <ImageView
        android:onClick="right"
        android:background="@drawable/bg_left"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:padding="6dp"
        android:tint="#fff"
        android:rotation="180"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/left"/>
    <TextView
        android:id="@+id/txvSoTrang"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="10/20"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:background="@drawable/bg_so_trang"/>
</RelativeLayout>