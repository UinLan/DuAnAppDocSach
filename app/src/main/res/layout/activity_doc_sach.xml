<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".objec.DocSachActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/tenChuongDocSach"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_weight="1"
            android:text="Tên Chương"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnGhiChu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginRight="10sp"
            android:layout_marginBottom="10sp"
            android:background="@drawable/bg_edt"
            android:padding="5dp"
            android:text="Ghi Chú"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout">
<TextView
    android:id="@+id/tvSachDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="20sp"
    android:padding="10sp"
    android:lineSpacingExtra="5dp"
    android:textAlignment="textStart"
    />
    </ScrollView>
    <ImageView
        android:onClick="left"
        android:background="@drawable/bg_left"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:padding="6dp"
        android:tint="#fff"
        android:layout_centerVertical="true"
        android:src="@drawable/left"/>
    <ImageView
        android:onClick="right"
        android:background="@drawable/bg_left"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:padding="6dp"
        android:tint="#fff"
        android:rotation="180"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/left"/>
    <TextView
        android:id="@+id/txvSoTrang"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="10/20"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:background="@drawable/bg_so_trang"/>
</RelativeLayout>